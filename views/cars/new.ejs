<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/cars/new.css"/>
<%- include('../partials/nav') %>

<main>
  <h1>Add new car</h1>
<!-- <% if(user) { %> -->
  <form action="/cars" method="POST">
    <label> Make:
      <input type="text" name="brand" autocomplete="off">
    </label>
    <label> Model:
      <input type="text" name="model" autocomplete="off">
    </label>
    <label> Year:
      <input type="text" name="year" autocomplete="off">
    </label>
    <label> Color:
      <input type="text" name="color" autocomplete="off">
    </label>
    <label> For Sale:
      <input type="checkbox" name="forSale">
    </label>
    <label> Your Dream car:
      <input type="text" name="dream">
    </label>
    <label for="feedback-select"> Rate your car: </label>
    <select name="feedback" id="feedback-select">
      <option value="Great car">Great Car</option>
      <option value="Good car">Good Car</option>
      <option value="Ok car">Ok car</option>
      <option value="Bad car">Bad car</option>
    </select>
    <label> Few words about your ride:
      <input type="text" name="driverNote">
    </label>
    <button type="submit" >Add a car</button>
  </form>
<!-- <% } %> -->

</main>
<%- include('../partials/footer') %>