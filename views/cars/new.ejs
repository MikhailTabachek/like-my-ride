<main>
  <h1>Add new car</h1>
<% if(user) { %>
  <form action="/" method="POST">
    <label> Make:
      <input type="text" name="brand" autocomplete="off">
    </label>
    <label> Model:
      <input type="text" name="model" autocomplete="off">
    </label>
    <label> Make:
      <input type="text" name="year" autocomplete="off">
    </label>
    <label> Color:
      <input type="text" name="color" autocomplete="off">
    </label>
    <label> For Sale:
      <input type="checkbox" name="forSale">
    </label>
    <button type="submit">Add a car</button>
  </form>
<% } %>

</main>
