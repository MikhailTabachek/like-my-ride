<%- include('./partials/html-head') %>
<%- include('./partials/nav') %>

<main>
  <h1 class="animate__animated animate__fadeIn">Hello, <%= user ? user.profile.name : "driver!" %></h1>
  <%if(user) {%>
    <h2 class="animate__animated animate__fadeIn"> You can add your car and leave comments.</h2>
  <% } else { %>
  <h2 class="animate__animated animate__fadeIn">Please login to add a car or leave comments.</h2>
  <% }%>

<% car.forEach(car => { %> 
  <div class="container">
    <p> Hey, I'm <%= car.driver.name %> and I drive a <%= car.year %> <%= car.brand %> <%= car.model %>.
      <br>
       The color is <%=car.color%>. It's a <%= car.feedback %> and right now it's <%= car.forSale ? 'For Sale.' : 'Not for Sale.' %> </li>
    </p>
    <a class="google" href="/cars/<%= car._id %>">
      <button id="details" type="submit">View Details</button>
    </a>
        
  </div>
<% }) %>


</main>

<%- include('./partials/footer') %>
